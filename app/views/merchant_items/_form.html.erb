<%= form_with url: path, method: :patch, local: true do |form| %>
  <%= form.label "Name:" %>
  <%= form.text_field :name, :value => @item.name %>
  <%= form.label "Description:" %>
  <%= form.text_field :description, :value => @item.description %>
  <%= form.label "Current Selling Price:" %>
  <%= form.text_field :unit_price, :value => @item.unit_price %>
  <%= form.submit button_text %>
<% end %>
